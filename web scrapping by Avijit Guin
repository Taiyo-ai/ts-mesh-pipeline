import requests

import bs4

from bs4 import BeautifulSoup

import pandas as pd

url ='https://www.bls.gov'

page= requests.get(url)

page.content

soup = BeautifulSoup(page.content,'html.parser')

soup

date = soup.find(attrs = {'class' : 'nr-archive-date'}).text.replace('\n',"")

news = soup.find(attrs = {'class' : 'heading'}).text.replace('\n',"")

data = [[url,date,news]]

data

df = pd.DataFrame(data, columns = [[url,date,news]])

df

df.to_csv('Blsdata.csv')
